<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="repository.BoardMapper">

    <insert id="createBoard">
        insert into board (title, content, user_id) values(#{title}, #{content}, #{user_id})
    </insert>

    <select id="getArticleById" resultType="domain.Board">
        select * from board where id = #{articleId}
    </select>

    <select id="getList" resultType="domain.Board">
        select * from board
    </select>

    <update id="updateArticle">
        update board set
        title = #{title},
        content = #{content},
        updated_at = now()
        where id = #{id}
    </update>
<!-- 특정 유저가 작성한 게시글 목록 출력할 때 활용 가능
    <select id="getNicknameByBoard" resultType="String">
        select user.nickname
        from user
        join board
        on user.id = #{user_id}
    </select>
-->

</mapper>